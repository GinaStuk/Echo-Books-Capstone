@model Capstone.Web.Models.SearchResultModel

@{
    ViewBag.Title = "SearchResults";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@foreach (var item in Model.Results)
{<div class="blockForList">


        <img class="searchResultCoverImage" src="@item.ImageLink" alt="Picture of Cover" />

        <div class="searchResultListItem">


            <span class="title">Title: @Html.ActionLink(@item.Title, "BookDetail", "Book", new { bookID = item.BookID }, null)<br /></span>
            <span>Author: @item.Author</span>




        </div>
    </div>
}



