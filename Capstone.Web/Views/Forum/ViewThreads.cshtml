@model List<Capstone.Web.Models.ThreadModel>
@{
    ViewBag.Title = "ViewThreads";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Echo Books Forum</h2>
@* needs logic so only users can do this or authorization filters*@

@for (int i = 0; i < 1; i++)
{
    <button class="addThreadBtn">@Html.ActionLink("Create a new thread", "AddAThread", "Forum", new { categoryID = Model[i].CategoryID }, null)</button>
}
<table class="table table-striped">
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td class="eachThread">@Html.ActionLink(Model[i].ThreadName, "ViewPosts", "Forum", new { threadID = Model[i].ThreadID }, null)</td>


            <td><span class="italic">posted by:</span>@Model[i].UserID <span class="italic">on </span>@Model[i].ThreadDate</td>

        </tr>
    }
</table>
